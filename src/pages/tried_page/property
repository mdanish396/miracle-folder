          bathroom: 4,
          plan: new URL('src/assets/currentproject/house2.jpg', import.meta.url).href,
          brochure: new URL('src/assets/reports/BILL GATES AND MICROSOFT.pdf', import.meta.url).href,
        },
      ],
    },
  ],
};
