  <q-card class="q-pa-none">
    <q-img
      v-if="selectedPlanImage"
      :src="selectedPlanImage"
      style="max-height: 90vh; max-width: 90vw;"
      spinner-color="primary"
      error="Image could not be loaded."
    />
  </q-card>
</q-dialog>
